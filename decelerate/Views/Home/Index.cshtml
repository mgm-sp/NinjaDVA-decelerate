@model decelerate.Views.Home.IndexModel
@{
    ViewData["Title"] = "Welcome";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="display-4 text-center">Welcome to decelerate</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <p>
            This tool allows you to let the presenter know if you're almost falling asleep and you want the talk to be faster,
            if you can't keep up or if it's right on the spot. Imagine it like both a brake pedal and a gas pedal, allowing you to
            <em>decelerate</em> (hence the name) or accelerate the talk.
        </p>
        <p>
            To vote, please select a room, enter your name and press <em>Start</em> to continue. You can either select a public
            room from the dropdown list or use the code that was given to you by your presenter to enter a private room.
        </p>
        <p>
            If you are a presenter and want to create your own room, click
            <a asp-controller="PresenterArea" asp-action="Index">here</a>.
        </p>
    </div>
    <div class="col-md-6">
        <form method="post">
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="RoomId">Public room</label>
                    <select class="form-control" asp-for="RoomId" asp-items="@(new SelectList(Model.PublicRoomList,"Id","DisplayText"))">
                        <option value="0">Select a room</option>
                    </select>
                </div>
                <div class="col-md-2 text-center">
                    <p>or</p>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="RoomCode">Private room</label>
                    <input class="form-control" placeholder="Enter the room code" asp-for="RoomCode" />
                </div>
            </div>
            <div class="form-group">
                <span class="text-danger">@ViewData["RoomErrorMessage"]</span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" placeholder="Enter your name" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Start</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScripts" />
}