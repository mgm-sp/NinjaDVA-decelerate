@model decelerate.Views.PresenterArea.RegisterModel
@{
    ViewData["Title"] = "Presenter Registration";
}

<div class="row">
    <div class="col-md-12">
        <h4>@ViewData["Title"]</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <p>
            To register as a presenter, please choose a username and a password.
            If you already have a presenter account, you can login
            <a asp-action="Login">here</a>.
        </p>
    </div>
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input class="form-control" asp-for="Username" placeholder="Enter a username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" placeholder="Enter a password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordRepeat"></label>
                <input class="form-control" asp-for="PasswordRepeat" placeholder="Repeat your password" />
                <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
            </div>
            <p class="text-danger">@ViewData["ErrorMessage"]</p>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScripts" />
}