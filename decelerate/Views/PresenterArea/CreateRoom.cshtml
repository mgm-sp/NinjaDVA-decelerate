@model decelerate.Views.PresenterArea.CreateRoomModel
@{
    ViewData["Title"] = "Create Room";
    ViewData["HomeController"] = "PresenterArea";
}

<div class="row">
    <div class="col-md-12">
        <h3>Create a new room</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <p>...</p>
    </div>
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label for="inputName">Name</label>
                @if (ViewData["ErrorMessage"] != null)
                {
                    <input type="text" class="form-control is-invalid" id="inputName" placeholder="Enter a room name" required asp-for="Name" />
                    <div class="invalid-feedback" asp-validation-for="Name">@ViewData["ErrorMessage"]</div>
                }
                else
                {
                    <input type="text" class="form-control" id="inputName" placeholder="Enter a room name" required asp-for="Name" />
                    <div class="invalid-feedback" asp-validation-for="Name"></div>
                }
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="checkPublic" />
                    <label class="form-check-label" for="checkPublic">Public room</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>