@model decelerate.Views.PresenterArea.IndexModel
@{
    ViewData["Title"] = "Presenter Area";
    ViewData["HomeController"] = "PresenterArea";
}

<div class="row">
    <div class="col-md-12">
        <h3>Welcome to the presenter area, @User.Identity.Name!</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h5>Your rooms</h5>
        <p>...</p>
    </div>
    <div class="col-md-6">
        <h5>Create a new room</h5>
        <form method="post">
            <div class="form-group">
                <label for="inputName">Name</label>
                @if (ViewData["ErrorMessage"] != null)
                {
                    <input type="text" class="form-control is-invalid" id="inputName" placeholder="Enter a room name" required asp-for="Name" />
                    <div class="invalid-feedback" asp-validation-for="Name">@ViewData["ErrorMessage"]</div>
                }
                else
                {
                    <input type="text" class="form-control" id="inputName" placeholder="Enter a room name" required asp-for="Name" />
                    <div class="invalid-feedback" asp-validation-for="Name"></div>
                }
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="checkPublic" />
                    <label class="form-check-label" for="checkPublic">Public room</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

@section Navigation {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="PresenterArea" asp-action="Logout">Logout</a>
    </li>
}