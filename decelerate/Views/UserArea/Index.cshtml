@model decelerate.Views.UserArea.IndexModel
@{
    ViewData["Title"] = "User Area";
    ViewData["HomeController"] = "UserArea";
}

<div class="row">
    <div class="col-md-12">
        <h3>Welcome, @Model.User.Name!</h3>
        <p>Please use the slider to choose if you want the talk to be slower or faster:</p>
        <form method="post" id="sliderForm">
            <input type="range" class="custom-range" asp-for="SpeedChoice" id="sliderInput" min="-100" max="100" />
        </form>
        <div class="d-flex justify-content-between">
            <div class="sliderImageDiv">
                <img src="~/img/turtle.svg" class="sliderImage" alt="much slower" title="much slower" />
            </div>
            <div>&#10229; slower</div>
            <div class="sliderImageDiv">
                <img src="~/img/checkmark.svg" class="sliderImage" alt="perfect speed" title="perfect speed" />
            </div>
            <div>faster &#10230;</div>
            <div class="sliderImageDiv">
                <img src="~/img/rabbit.svg" class="sliderImage" alt="much faster" title="much faster" />
            </div>
        </div>
    </div>
</div>

@section Navigation {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="UserArea" asp-action="Logout">Logout</a>
    </li>
}

@section Scripts {
    <script src="~/js/userarea.js" asp-append-version="true"></script>
    @if (ViewData["ShowModal"] != null)
    {
        <div class="modal" tabindex="-1" role="dialog" id="feedbackModal">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Successfully sent</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Thanks for your feedback.</p>
                    </div>
                </div>
            </div>
        </div>
        <script>
            $('#feedbackModal').modal();
            window.setTimeout(function () {
                $('#feedbackModal').modal('hide');
            }, 2000);
        </script>
    }
}